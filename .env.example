CLICKHOUSE_DB=fxai

KAFKA_BROKERS=localhost:9092

APP_API_KEY=changeme-dev-key
APP_API_PORT=9090

# LLM Configuration
# Provider options: openai, anthropic, ollama
LLM_PROVIDER=ollama
LLM_MODEL=llama3
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000

# OpenAI (cloud)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (cloud)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama (local - FREE!)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=30

# Hybrid ML+LLM Settings
ENABLE_LLM_FUSION=true
LLM_MAX_WEIGHT=0.4
LLM_MIN_CONFIDENCE=0.3
LLM_HIGH_IMPACT_THRESHOLD=7.0
LLM_CACHE_TTL_SECONDS=300

# News Ingestion
NEWS_POLL_INTERVAL_SEC=60
NEWS_LOOKBACK_HOURS=1
NEWS_ENABLE_SENTIMENT=true
NEWS_SENTIMENT_BATCH_SIZE=5

# Basic News APIs
NEWSAPI_KEY=
ALPHAVANTAGE_KEY=

# Advanced News Sources
TWITTER_BEARER_TOKEN=
TRADING_ECONOMICS_KEY=
FINNHUB_KEY=

# Source Toggles
ENABLE_CENTRAL_BANKS=true
ENABLE_TWITTER=false
ENABLE_ADVANCED_APIS=false